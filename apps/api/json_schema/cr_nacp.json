{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sis.nipo.gov.ua/api/v1/open-data/cr.nacp.schema.json",
  "title": "Авторське право на твір",
  "description": "Опис даних API СІС",
  "type": "object",
  "properties": {
    "obj_type": {
      "type": "string",
      "description": "Тип об'єкта промислової власності"
    },
    "obj_type_id": {
      "type": "integer",
      "description": "Ідентифікатор об’єкта промислової власності"
    },
    "obj_state": {
      "type": "integer",
      "description": "Ідентифікатор стану об’єкта промислової власності (1 - заявка, 2 - охоронний документ)"
    },
    "app_number": {
      "type": "string",
      "description": "Номер заявки"
    },
    "app_date": {
      "type":  ["string", "null"],
      "format": "date-time",
      "description": "Дата подання заявки"
    },
    "registration_number": {
      "type": ["string", "null"],
      "description": "Номер охоронного документа"
    },
    "registration_date": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Дата видачі охоронного документа"
    },
    "last_update": {
      "type": "string",
      "format": "date-time",
      "description": "Дата останньої зміни запису"
    },
    "data": {
      "description": "Бібліографічні дані",
      "type": "object",
      "properties": {
        "Name": {
          "description": "Назва",
          "type": "string"
        },
        "AuthorDetails": {
          "description": "Дані щодо автора",
          "type": "object",
          "properties": {
            "Author": {
              "description": "Список авторів",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "AuthorAddressBook": {
                    "type": "object",
                    "properties": {
                      "FormattedNameAddress": {
                        "description": "Дані щодо адреси та найменування суб'єкта",
                        "type": "object",
                        "properties": {
                          "Address": {
                            "description": "Дані щодо адреси суб'єкта",
                            "type": "object",
                            "properties": {
                              "AddressCountryCode": {
                                "description": "Код країни",
                                "type": "string"
                              },
                              "FreeFormatAddress": {
                                "type": "object",
                                "properties": {
                                  "FreeFormatAddressLine": {
                                    "description": "Адреса",
                                    "type": "string"
                                  }
                                }
                              }
                            }
                          },
                          "Name": {
                            "type": "object",
                            "description": "Дані щодо адреси найменування суб'єкта",
                            "properties": {
                              "FreeFormatName": {
                                "type": "object",
                                "properties": {
                                  "NameKind": {
                                    "description": "Тип суб'єкта (legal_entity, Legal Entity - юр. особа, individual, Natural Person, Natural Entity - фіз. особа, Other - інше)",
                                    "type": "string"
                                  },
                                  "FreeFormatNameDetails": {
                                    "type": "object",
                                    "properties": {
                                      "FreeFormatNameLine": {
                                        "description": "Найменування суб'єкта",
                                        "type": "string"
                                      }
                                    }
                                  },
                                  "RepresentNameFormDetails": {
                                    "type": "object",
                                    "properties": {
                                      "RepresentNameForm": {
                                        "description": "Найменування суб'єкта",
                                        "type": "string"
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  "AuthorSequenceNumber": {
                    "description": "Порядковий номер суб'єкта у списку авторів",
                    "type": ["number", "string"]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
