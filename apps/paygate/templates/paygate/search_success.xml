<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Transfer xmlns="http://debt.privatbank.ua/Transfer" interface="Debt" action="Search">
    <Data xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="DebtPack">
        <PayerInfo billIdentifier="{{ billIdentifier }}" ls="{{ billIdentifier }}" />
        <ServiceGroup>
            <DebtService serviceCode="{{ order.fee_type.service_group.code }}">
                <CompanyInfo>
                    <CompanyCode>31032378</CompanyCode>
                </CompanyInfo>
                <DebtInfo amountToPay="{{ order.value }}" debt="0.00"/>
                <Destination>{% if order.fee_type.service_group_id == 3 or order.fee_type.service_group_id == 4 %}*;101;держмито;заявка №{{ order.app_number }}; 22090300{% else %}КМУ1716, код {{ order.fee_type.code }}{% if order.app_number %}, № об'єкту {{ order.app_number }}{% endif %}{% endif %}</Destination>
                <PayerInfo billIdentifier="{{ billIdentifier }}" ls="{{ billIdentifier }}" />

                <DopData>
                    <Dop name="real_service_code" value="{{ order.fee_type.code }}" />
                </DopData>
            </DebtService>
        </ServiceGroup>
    </Data>
</Transfer>